{{{content}}}

{{#devServer}}
<script type="text/javascript">
  const sseSource = new EventSource(
    '/dev-updates?filename=' +
    encodeURIComponent(location.pathname.replace(/^\//, ''))
  );

  sseSource.addEventListener('message', () => {
    sseSource.close();
    location.reload();
  });
</script>
{{/devServer}}

